<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
    <title>Cart</title>
</head>

<body class="bg-gray-50 pt-[90px]">

    <%- include("partials/header") %>

    <div class="max-w-6xl mx-auto px-6 pb-10">

        <h2 class="text-3xl font-bold mb-6">Your Cart</h2>

        <% if (!user.cart || user.cart.length === 0) { %>

        <div class="bg-white p-10 rounded-xl shadow text-center">
            <i class="ri-shopping-cart-line text-6xl text-gray-400"></i>
            <h3 class="text-xl font-semibold mt-4">Your cart is empty</h3>
            <a href="/shop" class="mt-4 inline-block bg-black text-white px-6 py-3 rounded-lg">
                Shop Now
            </a>
        </div>

        <% } else { %>

        <!-- MAIN LAYOUT -->
        <div class="flex flex-col lg:flex-row gap-8">

            <!-- LEFT SIDE — PRODUCT LIST -->
            <div class="flex-1 space-y-6 overflow-y-auto pr-2 max-h-[75vh]">

                <% user.cart.forEach(item => { %>
                <div class="bg-white shadow p-5 rounded-xl flex items-center gap-5">

                    <!-- IMAGE -->
                    <div class="w-28 h-28 bg-gray-100 flex items-center justify-center rounded-lg">
                        <img src="data:image/jpeg;base64,<%= item.product.image.toString('base64') %>"
                            class="h-20 object-contain" />
                    </div>

                    <!-- DETAILS -->
                    <div class="flex-1">
                        <h3 class="text-lg font-semibold"><%= item.product.name %></h3>
                        <p class="text-gray-600">₹ <%= item.product.price %></p>

                        <!-- QUANTITY CONTROL -->
                        <div class="mt-3 flex items-center gap-3">

                            <form action="/cart/decrease/<%= item.product._id %>" method="POST">
                                <button class="w-7 h-7 flex items-center justify-center bg-gray-200 rounded">
                                    <i class="ri-subtract-line"></i>
                                </button>
                            </form>

                            <span class="text-lg font-semibold"><%= item.quantity %></span>

                            <form action="/cart/increase/<%= item.product._id %>" method="POST">
                                <button class="w-7 h-7 flex items-center justify-center bg-gray-200 rounded">
                                    <i class="ri-add-line"></i>
                                </button>
                            </form>

                        </div>
                    </div>

                    <!-- REMOVE BUTTON -->
                    <form action="/cart/remove/<%= item.product._id %>" method="POST">
                        <button class="text-red-600 text-2xl">
                            <i class="ri-delete-bin-line"></i>
                        </button>
                    </form>

                </div>
                <% }) %>

            </div>

            <!-- RIGHT SIDE — ORDER SUMMARY -->
            <div class="w-full lg:w-[360px]">

                <div class="bg-white shadow rounded-xl p-6 sticky top-[100px]">

                    <h3 class="text-xl font-bold mb-4">Order Summary</h3>

                    <!-- DELIVERY ADDRESS BOX -->
                    <div class="bg-gray-50 p-4 rounded-lg border mb-4">
                        <h4 class="text-lg font-semibold flex items-center gap-2">
                            <i class="ri-map-pin-line text-2xl"></i> Delivery Address
                        </h4>

                        <% if (user.address) { %>
                        <p class="text-gray-700 mt-2"><%= user.address %></p>

                        <a href="/edit-address"
                            class="text-blue-600 mt-2 inline-block hover:underline">Edit Address</a>

                        <% } else { %>

                        <p class="text-gray-500 mt-2">No address added.</p>

                        <a href="/edit-address"
                            class="text-blue-600 mt-2 inline-block hover:underline">Add Address</a>

                        <% } %>
                    </div>

                    <% let total = 0;
                       user.cart.forEach(i => total += i.product.price * i.quantity);
                    %>

                    <div class="text-lg font-medium flex justify-between">
                        <span>Subtotal</span>
                        <span>₹ <%= total %></span>
                    </div>

                    <div class="text-lg font-medium flex justify-between mt-2">
                        <span>Platform Fee</span>
                        <span>₹ 20</span>
                    </div>

                    <div class="text-lg font-medium flex justify-between border-b pb-2 mt-2">
                        <span>Shipping Fee</span>
                        <span>₹ 0</span>
                    </div>

                    <div class="text-xl font-bold flex justify-between mt-2">
                        <span>Total</span>
                        <span>₹ <%= total + 20 %></span>
                    </div>

                    <a href="/checkout"
                        class="block bg-black text-white text-center py-3 rounded-lg mt-6 font-semibold">
                        Proceed to Checkout
                    </a>

                </div>

            </div>

        </div>

        <% } %>

    </div>

</body>

</html>

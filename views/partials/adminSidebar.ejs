<!-- SIDEBAR (Desktop + Mobile Slide-in) -->
<aside id="sidebar"
    class="fixed top-[70px] left-0 w-64 bg-white h-[calc(100vh-70px)] shadow-md p-6
           transition-all duration-300 z-50 md:translate-x-0 -translate-x-full">

    <h2 class="text-lg font-semibold mb-4 text-gray-800">Admin Menu</h2>

    <div class="flex flex-col gap-4 text-gray-700">

        <a href="/owner/admin" class="hover:text-black flex items-center gap-2">
            <i class="ri-dashboard-line"></i> Dashboard
        </a>

        <a href="/product/all" class="hover:text-black flex items-center gap-2">
            <i class="ri-database-2-line"></i> Manage Products
        </a>

        <a href="/owner/create-product" class="hover:text-black flex items-center gap-2">
            <i class="ri-add-circle-line"></i> Create Product
        </a>

        <a href="/owner/orders" class="hover:text-black flex items-center gap-2">
            <i class="ri-file-list-line"></i> Manage Orders
        </a>

        <!-- LOGOUT BUTTON TRIGGER POPUP -->
        <button onclick="openLogoutModal()"
            class="text-left text-red-600 hover:text-red-800 flex items-center gap-2">
            <i class="ri-logout-box-line"></i> Logout
        </button>

    </div>

    <!-- Mobile Close Button -->
    <button onclick="closeSidebar()"
        class="absolute top-4 right-4 text-2xl md:hidden">
        <i class="ri-close-line"></i>
    </button>
</aside>


<!-- ðŸ”¥ MODERN LOGOUT CONFIRMATION MODAL -->
<div id="logoutModal"
    class="hidden fixed inset-0 bg-black/40 backdrop-blur-sm flex items-center justify-center z-[999]">

    <div class="bg-white p-6 w-80 rounded-xl shadow-xl animate-[fadeIn_.3s_ease]">

        <h3 class="text-xl font-bold text-gray-800 mb-2">Logout?</h3>
        <p class="text-gray-600 mb-5">Are you sure you want to logout from admin panel?</p>

        <div class="flex justify-end gap-3">

            <button onclick="closeLogoutModal()"
                class="px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300">
                Cancel
            </button>

            <a href="/owner/logout"
                class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">
                Logout
            </a>

        </div>
    </div>
</div>


<!-- JS FOR SIDEBAR & MODAL -->
<script>
function openSidebar() {
    document.getElementById("sidebar").classList.remove("-translate-x-full");
}

function closeSidebar() {
    document.getElementById("sidebar").classList.add("-translate-x-full");
}

function openLogoutModal() {
    document.getElementById("logoutModal").classList.remove("hidden");
}

function closeLogoutModal() {
    document.getElementById("logoutModal").classList.add("hidden");
}
</script>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">

    <title>Admin | Create Product</title>
</head>

<body class="bg-gray-100">

    <!-- FLASH MESSAGE -->
    <% if (success && success.length > 0) { %>
    <div
        class="flash-success fixed top-20 left-1/2 -translate-x-1/2 
        w-72 sm:w-96 bg-green-100 border-l-4 border-green-500 text-green-800 
        px-4 py-3 rounded-md shadow-md animate-slideDown z-[999]">
        <span><%= success %></span>
    </div>
    <% } %>

    <!-- TOP ADMIN NAVBAR -->
    <header class="fixed top-0 left-0 w-full bg-white h-[70px] shadow flex items-center justify-start gap-2 px-6 z-50">

        <!-- Hamburger (Mobile) -->
        <button onclick="openSidebar()" class="text-3xl md:hidden">
            <i class="ri-menu-line"></i>
        </button>

        <h1 class="text-2xl font-bold">BagVerse Admin</h1>

        
    </header>

    <!-- SIDEBAR -->
   <%- include("./partials/adminSidebar") %>

    <!-- PAGE CONTENT WRAPPER -->
    <div class="pt-[90px] md:ml-64 px-4 md:px-10 pb-10 transition-all duration-300">

        <main class="bg-white p-6 md:p-8 shadow rounded-lg">

            <h2 class="text-xl font-bold mb-4">Create New Product</h2>

            <form autocomplete="off" action="/product/create" method="post" enctype="multipart/form-data">

                <!-- PRODUCT DETAILS -->
                <div class="mb-6">

                    <h3 class="text-lg font-semibold mb-3">Product Details</h3>

                    <!-- IMAGE INPUT -->
                    <div class="mb-4">
                        <label class="block mb-2 font-medium">Product Image</label>

                        <div class="flex items-center gap-4 flex-wrap">
                            <label
                                class="cursor-pointer bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition font-medium">
                                Choose File
                                <input type="file" name="avatar" class="hidden" id="avatarInput" required>
                            </label>

                            <span id="fileName" class="text-gray-600 text-sm">No file selected</span>
                        </div>
                    </div>

                    <!-- FORM GRID -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <input name="name" type="text" placeholder="Product Name"
                            class="border p-2 rounded w-full" required>

                        <input name="price" type="text" placeholder="Product Price"
                            class="border p-2 rounded w-full" required>

                        <input name="discount" type="text" placeholder="Discount Price"
                            class="border p-2 rounded w-full" required>
                    </div>
                </div>

                <!-- PANEL DETAILS -->
                <div>
                    <h3 class="text-lg font-semibold mb-3">Panel Details</h3>

                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <input name="bgcolor" type="text" placeholder="Background Color"
                            class="border p-2 rounded w-full" required>

                        <input name="panelcolor" type="text" placeholder="Panel Color"
                            class="border p-2 rounded w-full" required>

                        <input name="textcolor" type="text" placeholder="Text Color"
                            class="border p-2 rounded w-full" required>
                    </div>
                </div>

                <button
                    class="px-5 py-2 rounded-lg mt-5 bg-blue-600 hover:bg-blue-700 text-white font-medium">
                    Create New Product
                </button>

            </form>
        </main>

    </div>

    <!-- SCRIPTS -->
    <script>
        function openSidebar() {
            document.getElementById("sidebar").classList.remove("-translate-x-full");
        }
        function closeSidebar() {
            document.getElementById("sidebar").classList.add("-translate-x-full");
        }

        // Flash message fade-out
        setTimeout(() => {
            const messages = document.querySelectorAll(".flash-success");
            messages.forEach(msg => {
                msg.style.opacity = "0";
                msg.style.transition = "opacity .4s";
                setTimeout(() => msg.remove(), 400);
            });
        }, 2500);

        // Show selected file name
        document.getElementById("avatarInput").addEventListener("change", function () {
            const fileName = this.files.length > 0 ? this.files[0].name : "No file selected";
            document.getElementById("fileName").textContent = fileName;
        });
    </script>

</body>

</html>

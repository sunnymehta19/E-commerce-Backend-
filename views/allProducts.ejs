<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
    <title>Admin | Manage Products</title>
</head>

<body class="bg-gray-100">

    <!-- TOP NAVBAR -->
    <div class="w-full bg-white shadow-sm h-[70px] flex justify-between items-center px-6 fixed top-0 left-0 z-40">

        <!-- Hamburger (Mobile only) -->
        <button onclick="openSidebar()" class="text-3xl md:hidden">
            <i class="ri-menu-line"></i>
        </button>

        <h1 class="text-2xl font-bold tracking-wide text-gray-800">BagVerse Admin</h1>

        <a href="/owner/logout"
            class="bg-red-600 px-4 py-2 text-white rounded-lg font-semibold hover:bg-red-700">
            Logout
        </a>
    </div>

    <!-- SIDEBAR -->
    <aside id="sidebar"
        class="fixed top-[70px] left-0 w-64 bg-white h-[calc(100vh-70px)] shadow-md p-6 transition-all duration-300 
        md:translate-x-0 -translate-x-full z-50">

        <h2 class="text-lg font-semibold mb-4">Admin Menu</h2>

        <div class="flex flex-col gap-4 text-gray-700">
            <a href="/owner/admin" class="hover:text-black">Dashboard</a>
            <a href="/product/all" class="text-black font-semibold">Manage Products</a>
            <a href="/product/create" class="hover:text-black">Create Product</a>
            <a href="/owner/logout" class="text-red-600 hover:text-red-800">Logout</a>
        </div>

        <!-- Close Button for Mobile -->
        <button onclick="closeSidebar()" class="absolute top-5 right-5 text-2xl md:hidden">
            <i class="ri-close-line"></i>
        </button>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="pt-[90px] md:ml-64 px-6 transition-all duration-300">

        <h2 class="text-3xl font-bold mb-6">Manage Products</h2>

        <!-- CREATE PRODUCT BUTTON -->
        <a href="/product/create"
            class="inline-block mb-5 bg-blue-600 text-white px-5 py-2 rounded-lg hover:bg-blue-700">
            + Create New Product
        </a>

        <!-- PRODUCTS TABLE -->
        <div class="overflow-x-auto bg-white shadow rounded-xl p-6">

            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="border-b text-gray-700">
                        <th class="py-3 px-2">Image</th>
                        <th class="py-3 px-2">Name</th>
                        <th class="py-3 px-2">Price</th>
                        <th class="py-3 px-2">Discount</th>
                        <th class="py-3 px-2">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    <% products.forEach(p => { %>
                    <tr class="border-b hover:bg-gray-50">

                        <td class="py-3 px-2">
                            <img class="h-14 rounded-md  p-1 "
                                src="data:image/jpeg;base64,<%= p.image.toString('base64') %>"
                                alt="<%= p.name %>">
                        </td>

                        <td class="py-3 px-2 font-semibold text-gray-800"><%= p.name %></td>

                        <td class="py-3 px-2">₹ <%= p.price %></td>

                        <td class="py-3 px-2">₹ <%= p.discount %></td>

                        <td class="py-3 px-2 flex gap-3">

                            <a href="/product/edit/<%= p._id %>"
                                class="text-blue-600 hover:text-blue-800 text-xl">
                                <i class="ri-edit-2-line"></i>
                            </a>

                            <button onclick="confirmDelete('<%= p._id %>')"
                                class="text-red-600 hover:text-red-800 text-xl">
                                <i class="ri-delete-bin-line"></i>
                            </button>

                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </main>

    <!-- DELETE CONFIRMATION MODAL -->
    <div id="deleteModal"
        class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50">

        <div class="bg-white p-6 rounded-lg shadow-lg w-80">
            <h3 class="text-xl font-bold text-gray-800 mb-2">Delete Product?</h3>

            <p class="text-gray-600 mb-5">
                Are you sure you want to delete this product?
            </p>

            <div class="flex justify-end gap-3">
                <button onclick="closeModal()"
                    class="px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300">Cancel</button>

                <a id="deleteBtn"
                    class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">
                    Delete
                </a>
            </div>
        </div>
    </div>

    <script>
        function openSidebar() {
            document.getElementById("sidebar").classList.remove("-translate-x-full");
        }
        function closeSidebar() {
            document.getElementById("sidebar").classList.add("-translate-x-full");
        }

        function confirmDelete(id) {
            document.getElementById("deleteBtn").href = "/product/delete/" + id;
            document.getElementById("deleteModal").classList.remove("hidden");
        }
        function closeModal() {
            document.getElementById("deleteModal").classList.add("hidden");
        }
    </script>

</body>

</html>

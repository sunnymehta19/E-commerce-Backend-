<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Cart</title>
</head>

<body class="bg-[#f1f1f1]">
    <nav class="bg-white shadow-md px-6 py-4 text-2xl font-bold">
        <a href="/">BagStore</a>
    </nav>

    <div class="p-6 md:p-12">
        <h2 class="text-3xl font-bold mb-6">Your Cart</h2>

        <% if (cart.length === 0) { %>
            <p class="text-gray-600 text-lg">Your cart is empty.</p>
        <% } else { %>

            <div class="space-y-6">
                <% cart.forEach(item => { %>
                    <div class="bg-white shadow p-4 rounded-lg flex justify-between items-center">
                        <div>
                            <h3 class="font-bold text-xl"><%= item.name %></h3>
                            <p class="text-gray-600">â‚¹<%= item.price %></p>
                        </div>

                        <form action="/cart/remove/<%= item._id %>" method="post">
                            <button class="text-red-600 hover:underline">Remove</button>
                        </form>
                    </div>
                <% }) %>
            </div>

            <div class="mt-8">
                <a href="/checkout"
                    class="bg-amber-600 text-white px-6 py-3 rounded-lg font-bold hover:bg-amber-700">
                    Proceed to Checkout
                </a>
            </div>

        <% } %>
    </div>

</body>

</html>
